doctype html
html
    head
        link(rel="stylesheet", href="styles/main.css")
    body
        h3 Active CSTA Sessions
        table
            thead
                tr
                    th Session ID
                    th TCP-Channel
            tbody
                each session in sessions
                    tr
                        td #{session.getSessionId()}
                        td #{session.getClientChannel().remoteAddress()}

        h3 Devices
        table
            thead
                tr
                    th Device ID
                    th Device Category
                    th State
            tbody
                each device in devices
                    tr
                        td #{device.getDeviceId()}
                        td #{device.getCategory()}
                        td #{device.getState()}